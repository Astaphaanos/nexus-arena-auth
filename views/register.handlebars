<div class="hero-section">
    <span>Registro de Jogador</span>
    <h1>Criar sua conta</h1>
    <p>Escolha seu nome de guerra e entre na arena</p>
</div>

<form action="/register" method="POST" class="form-control">

  <div>
    <label for="user">Gamertag</label>
    <input
      type="text"
      id="user"
      name="user"
      placeholder="SeuNomeDeGuerra"
      required
    />
  </div>

  <div>
    <label for="email">E-mail</label>
    <input
      type="email"
      id="email"
      name="email"
      placeholder="jogador@email.com"
      required
    />
  </div>

  <div class="input-wrapper">
    <label for="password">Senha</label>
    <input
      type="password"
      id="password"
      name="password"
      minlength="8"
      required
    />
    <button type="button" class="toggle-password" onclick="togglePassword('password')">
      Mostrar
    </button>
  </div>

  <div class="input-wrapper">
    <label for="confirmPassword">Confirmar senha</label>
    <input
      type="password"
      id="confirmPassword"
      name="confirmPassword"
      minlength="8"
      required
    />
    <button type="button" class="toggle-password" onclick="togglePassword('password')">
      Mostrar
    </button>
  </div>

  <div class="terms-group">
    <div class="terms">
      <input type="checkbox" id="terms">
      <label for="terms">Aceito os Termos de Uso e Codigo de Conduta</label>
    </div>
  </div>

  <button type="submit">
    Entrar na Arena
  </button>

  <p>
    JÃ¡ tem conta?
    <a href="/login"><span>Entrar</span></a>
  </p>

</form>

<script>
  function togglePassword(id) {
    const input = document.getElementById(id)
    input.type = input.type === "password" ? "text" : "password"
  }
</script>
